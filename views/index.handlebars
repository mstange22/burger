<div class="jumbotron text-center" id="jumbotron">
    <img src="assets/images/burger-img.png">
    <h2>Eat-Da-Burger!</h2>
</div>
<div class="container text-center" id="container">
    <div class="row">
        <div class="col-xs-7" id="uneaten-container">
            <h3>Uneaten Burgers</h3>
            {{#each uneatenBurgers}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <div class="uneaten text-center">
                    <span class="uneaten-id">{{this.id}}</span>. {{this.burger_name}}
                </div>
                <button class="eat-button btn btn-info btn-xs" type="submit">Devour It!</button>
            </form>
            {{/each}}
        </div>
        <div class="col-xs-5" id="eaten-container">
            <h3>Eaten Burgers</h3>
            {{#each eatenBurgers}}
            <div class="eaten text-center">
                {{this.id}}. {{this.burger_name}}
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Add a Burger</h2>
            <form method="POST" action="/" class="button-size">
                <textarea id="text-area" type="text" name="burger"></textarea>
                <button class="btn btn-info" id="add-button" type="submit">Add</button>
            </form>
            <form method="POST" action="/?_method=PUT" class="button-size">
                <button class="btn btn-info" id="reset-button" type="submit">Un-Devour-Da-Burgers</button>
            </form>
            <h2>Delete a Burger</h2>
            <form action="/?_method=DELETE" method="POST" class="button-size">
                <select name="id" class="select">
		            {{#each burgers}}
			        <option class="options" value="{{this.id}}">{{this.id}}. {{this.burger_name}}</option>
	            	{{/each}}
	            </select>
                <button id="delete-button" class="btn btn-info" type="submit">Delete</button>
            </form>
        </div>        
    </div>
</div>
<br>